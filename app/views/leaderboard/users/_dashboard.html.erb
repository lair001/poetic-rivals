<div class="global-jumbotron" id="leaderboard_dashboard">
		<%
			content_left = <<-CONTENT_LEFT
				<h3>Highest Score:</h3>
				<h4>#{link_to username_with_highest_score, user_path(user_with_highest_score)}</h4>
				<h4>#{highest_score}</h4>
				<h3>Most Fans:</h3>
				<h4>#{link_to username_with_most_fans, user_path(user_with_most_fans)}</h4>
				<h4>#{highest_fan_count}</h4>
				<h3>Most Idols:</h3>
				<h4>#{link_to username_with_most_idols, user_path(user_with_most_idols)}</h4>
				<h4>#{highest_idol_count}</h4>
			CONTENT_LEFT

			content_right = <<-CONTENT_RIGHT
				<h3>Lowest Score:</h3>
				<h4>#{link_to username_with_lowest_score, user_path(user_with_lowest_score)}</h4>
				<h4>#{lowest_score}</h4>
				<h3>Most Rivals:</h3>
				<h4>#{link_to username_with_most_rivals, user_path(user_with_most_rivals)}</h4>
				<h4>#{highest_rival_count}</h4>
				<h3>Most Victims:</h3>
				<h4>#{link_to username_with_most_victims, user_path(user_with_most_victims)}</h4>
				<h4>#{highest_victim_count}</h4>
			CONTENT_RIGHT
		%>
		<%= render partial: 'layouts/row_with_two_half_width_fields', locals: { content_left: content_left, content_right: content_right } %>

</div>