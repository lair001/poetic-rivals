<div class="global-jumbotron" id="users">
	<% users.each do |user| %>
		<div class="global-divider-top <%= "global-divider-bottom" if user == @users.last %>">
			<div class="row" id="<%= "user_#{user.id}" %>">
				<div class="col-xs-4">
					<br>
					<h3><%= link_to user.username, user_path(user) %></h3>
					<h4><em><%= display_role_for(user) %></em></h4>
					<h4>Joined:</h4>
					<h6><%= raw(display_date(user.created_at)) %></h6>
					<h6><%= raw(display_time(user.created_at)) %></h6>
					<br>
				</div>
				<div class="col-xs-8">
					<br>
					<br>
					<br>
					<h3><%= raw("#{user.score}<br>(#{user.score_per_poem})")  %></h3>
					<br>
				</div>
			</div>
		</div>
	<% end %>
</div>