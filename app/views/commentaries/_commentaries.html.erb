<div class="global-jumbotron" id="commentaries_dashboard">
	<%= render partial: 'layouts/forms/global_one_centered_half_width_button_only_form', locals: { action: new_user_poem_commentary_path(params[:user_id], params[:poem_id]), method: :get, content: "#{fa_icon("pencil-square-o")} Comment" } %>
	<% commentaries.each do |commentary| 
		commentator = commentary.commentator %>
		<div class="global-divider-top <%= "global-divider-bottom" if commentary == commentaries.last %>">
			<div class="row" id="<%= "commentary_#{commentary.id}" %>">
				<div class="col-xs-4">
					<br>
					<h3><%= link_to commentator.username, user_path(commentator) %></h3>
					<h4><em><%= display_role_for(commentator) %></em></h4>
					<h4>Created:</h4>
					<h6><%= raw(display_date(commentary.created_at)) %></h6>
					<h6><%= raw(display_time(commentary.created_at)) %></h6>
					<h4>Updated:</h4>
					<h6><%= raw(display_date(commentary.updated_at)) %></h6>
					<h6><%= raw(display_time(commentary.updated_at)) %></h6>
					<br>
				</div>
				<div class="col-xs-8">
					<br>
					<br>
					<div class="align-left" id="<%="commentary_#{commentary.id}_comment"%>"><%= render_comment_for(commentary) %></div>
					<br>
				</div>
			</div>
			<% if policy(commentary).update? %>
				<%= render partial: 'layouts/forms/global_row_with_two_half_width_button_only_forms', locals: { action_left: edit_user_poem_commentary_path(commentary.commentator_id, commentary.poem_id, commentary.id), method_left: :get, content_left: "#{fa_icon("pencil-square-o")} Edit", action_right: user_poem_commentary_path(commentary.commentator_id, commentary.poem_id, commentary.id), method_right: :delete, content_right: "#{fa_icon("bomb")} Delete" } %>
			<% end %>
		</div>
	<% end %>
<%= render partial: 'layouts/forms/global_one_centered_half_width_button_only_form', locals: { action: new_user_poem_commentary_path(params[:user_id], params[:poem_id]), method: :get, content: "#{fa_icon("pencil-square-o")} Comment" } %>
</div>