<% if flash[:error] || flash[:notice] || (flash[:alert] && flash[:alert] != "You are already signed in.") %>
	<%= content_tag(:div, :id => "flash_messages") do %>
		<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
		<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
		<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] && flash[:alert] != "You are already signed in." %>
	<% end %>
<% end %>