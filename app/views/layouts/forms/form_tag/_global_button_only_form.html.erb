<% value = nil if !local_assigns.has_key?(:value) %>
<% data = {} if !local_assigns.has_key?(:data) %>
<%= form_tag action, method: method do %>
	<%= value ? hidden_field_tag('value', value) : "" %>
	<%= button_tag class: "btn global-form-btn", data: data do %>
		<%= raw(content) %>
	<% end %>
<% end %>