<div class="global-jumbotron" id="devise_shared_buttons">
	<div class="row">
	    <div class="col-xs-6">
			<%- if controller_name != 'sessions' %>
				<form method="get" action="<%= new_session_path(resource_name) %>">
					<button class="btn global-form-btn" type="submit">Log in</button>
				</form>
			<% end -%>
	    </div>
	    <div class="col-xs-6">
	    	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
				<form method="get" action="<%= new_registration_path(resource_name) %>">
					<button class="btn global-form-btn" type="submit">Sign up</button>
				</form>
			<% end -%>
	    </div>
	</div>
	<div class="row">
    	<div class="col-xs-6">
    		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
				<form method="get" action="<%= new_password_path(resource_name) %>">
					<button class="btn global-form-btn" type="submit">Recover password</button>
				</form>
			<% end -%>
		</div>
		<div class="col-xs-6">
			<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
				<form method="get" action="<%=new_confirmation_path(resource_name) %>">
				<button class="btn global-form-btn" type="submit">Confirmation</button>
				</form>
			<% end -%>
		</div>
	</div>
</div>