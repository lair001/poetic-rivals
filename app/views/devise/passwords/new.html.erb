<div class="global-jumbotron">
	<% if @user.errors.any? %>
		<%= render partial: 'layouts/model_errors', locals: { model: @user } %>
	<% end %>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "global-form-half-width" }) do |f| %>

	  <div class="form-group">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, class: "form-control global-form-input" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Reset password", class: "btn global-form-btn" %>
	  </div>
	<% end %>
</div>
<%= render "devise/sessions/omniauth_login" %>
<%= render 'devise/shared/buttons' %>
